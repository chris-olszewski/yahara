<div id="album">
  <div class="meta-data">
    <img class='art' {{bind-attr src="art"}}>
    <div class="album-info-block">
      <h3 class="album">{{title}}</h3>
      <h3 class= "artist">{{artist_name}}</h3>
      <p>
        {{record_label}}
        <br>
        {{release_date}}
      </p>
    </div>
    <div class="play-button" {{action "playPause" firstTrack}}><img src="/assets/images/play_button.png"></div>
  </div>
  <div class='actions'>
    {{#if inCollection}}
      {{#y-block title="Remove from Your Collection" action="remove" parameter=model class="add-button"}}
      {{/y-block}}
    {{else}}
      {{#y-block title="Add to Your Collection" action="collect" parameter=model class="add-button"}}
      {{/y-block}}
    {{/if}}
    {{#y-block title="Download"}}
      <p>
      <img class="download-filetype-images" src="/assets/images/download-icon.png">MP3
      <br><img class="download-filetype-images" src="/assets/images/download-icon.png">FLAC
      <br><img class="download-filetype-images" src="/assets/images/download-icon.png">AAC
      <br><img class="download-filetype-images" src="/assets/images/download-icon.png">ALAC</p>
    {{/y-block}}

    {{#y-block title="Track List" expanded="true"}}
      <table>
        <tbody>
          {{#each track in tracks}}
            {{render 'list/track' track}}
          {{/each}}
        </tbody>
      </table>
    {{/y-block}}

    {{#y-block title="Options to Purchase"}}

      <table>
        <tr>
          <td></td>
          <td>CD</td>
          <td>Vinyl</td>
          <td>Download</td>
          <td>Streaming</td>
        </tr>
        <tr>
          <td><a href="www.murfie.com">Murfie</a></td>
          <td>$12.00</td>
          <td>$12.00</td>
          <td>Free with purchase</td>
          <td>Free with purchase</td>
        </tr>
        <tr>
          <td><a href="www.bandcamp.com">Bandcamp</a></td>
          <td>$12.00</td>
          <td>$12.00</td>
          <td>Free with purchase</td>
          <td>Free with purchase</td>
        </tr>
        <tr>
          <td><a href="www.cdbaby.com">CDBaby</a></td>
          <td>$12.00</td>
          <td>$12.00</td>
          <td>Free with purchase</td>
          <td>Free with purchase</td>
        </tr>
      </table>
    {{/y-block}}
  </div>
  <div class='info'>
    {{#y-block title="Review" expanded='true' column='left-col'}}
      {{{review}}}
    {{/y-block}}

    {{#y-block title="Upcoming Shows" expanded='true' column='left-col'}}
      <i class ="orange-icon ion-social-rss"></i>
      <i class ="orange-icon ion-android-arrow-up-right"></i>
      <p>MAR 04 Sacramento, CA, at Harlowâ€™s
      <br>MAR 05 Los Angeles, CA, at The Echo
      <br>MAR 07 San Diego, CA, at Irenic</p>
    {{/y-block}}
  </div>
</div>
