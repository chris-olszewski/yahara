<div id= "album" class="row">
  <div class="small-12 large-6 columns">
    <img class='art' {{bind-attr src="art"}}>
    <h4>{{title}}</h4>
    <h5>{{main_artist.name}}</h5>
  </div>
  <div class="small-12 large-6 columns">
    <table>
      <tbody>
        {{#each track in tracks}}
          {{!-- '../this' resolves to the outer context - the album record --}}
          <tr class="track" {{action 'playPause' ../this track}}>
            <td>{{track.position}}</td>
            <td>{{track.title}}</td>
            <td>{{format-duration track.duration}}</td>
            <td>
              {{#if track.playing }}
                <i class="icon ion-pause"></i>
              {{else}}
                <i class="icon ion-play"></i>
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>