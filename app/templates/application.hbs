{{render 'player'}}

<div id="content">
  <div id="header">
    <div id='logo' class="small-12 large-6 columns">
      {{#link-to 'albums'}}<img src="/assets/images/logo-horiz.png">{{/link-to}}
    </div>
    <div id='nav' class="small-12 large-6 columns">
      <ul>
        <li>{{#link-to 'albums'}}Catalog{{/link-to}}</li>
        <li>{{#link-to 'collection'}}My Collection{{/link-to}}</li>
        {{#if authorized }}
          <li><a href="#/login" {{action 'signOut'}}>Logout</a></li>
        {{else}}
          <li><a href="#/login" {{action 'openModal'}}>Login</a></li>
        {{/if}}
      </ul>
    <input id='search' placeholder='Search'>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      {{outlet}}
    </div>
  </div>
</div>

{{render 'modal'}}